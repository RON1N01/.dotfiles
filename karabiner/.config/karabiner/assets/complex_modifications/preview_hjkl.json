{
  "title": "Preview hjkl to arrow keys",
  "rules": [
    {
      "description": "Use hjkl as arrow keys in Preview",
      "manipulators": [
        {
          "type": "basic",
          "from": { "key_code": "h" },
          "to": [ { "key_code": "left_arrow" } ],
          "conditions": [
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": [ "^com\\.apple\\.Preview$" ]
            }
          ]
        },
        {
          "type": "basic",
          "from": { "key_code": "j" },
          "to": [ { "key_code": "down_arrow" } ],
          "conditions": [
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": [ "^com\\.apple\\.Preview$" ]
            }
          ]
        },
        {
          "type": "basic",
          "from": { "key_code": "k" },
          "to": [ { "key_code": "up_arrow" } ],
          "conditions": [
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": [ "^com\\.apple\\.Preview$" ]
            }
          ]
        },
        {
          "type": "basic",
          "from": { "key_code": "l" },
          "to": [ { "key_code": "right_arrow" } ],
          "conditions": [
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": [ "^com\\.apple\\.Preview$" ]
            }
          ]
        }
      ]
    }
  ]
}
